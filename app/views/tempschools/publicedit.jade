extends ../layout

block content
    script(type='text/javascript', src='/javascripts/uiControllers/TempSchoolView.js')
    script(type='text/javascript')
        $(function() {
                setupUI(#{school.id});
        });
    include ../elements/header
    //
      / Header
    //
      Container
    .containerr
      .container
        .loginContent
          .contentIn
            .ourstoryHeader
              h2
                | Edit Listing
                span 
            .signupForm
              form#schoolEditFrm( method='post', action='/tempschools/edit', name='schoolEditFrm', enctype="multipart/form-data", onsubmit='return validateTempSchool();')
                
                      .signupFormRow
                        label This is me.
                        input(type="checkbox", name="mylisting", id="mylisting", value="1", checked="checked")
                      .signupFormRow
                        label Your Email:
                        input(type="text", name="your_email", id="your_email", value='')
                      .signupFormRow
                        label School Name:
                        input(type="text", name="school_name", id="school_name", value= school.school_name ? school.school_name : '')
                        input(type="hidden", name="schoolId", id="schoolId", value="#{school.id}")
                        input(type="hidden", name="url", id="url", value="#{school.url}")
                      .signupFormRow
                        label Country:school
                        select(name='country', id='country', onchange='changeState(this.value);')
                      .signupFormRow
                        label State:
                        #stateHolder
                          select(name='state', id='state', onchange='changeCity(this.value);')
                      .signupFormRow
                        label City:
                        #cityHolder
                          select(name='city', id='city')
                      .signupFormRow
                        label Picture Link:
                        input(type="text", name="school_image", id="school_image", value="#{pasteUrl}")
                        input(type="hidden", name="oldImage", id="oldImage", value="#{school.school_image}")
                      .signupFormRow
                        label OR
                        &nbsp;
                      .signupFormRow
                        label Upload Picture:
                        input(type="file", name="picture", id="picture")
                      .signupFormRow
                        label Your Story:
                        textarea(name="description", id="description", rows="4", cols="25") #{school.description}
                      .signupFormRow
                        label Website:
                        input(type="text", name="website", id="website", value= school.website ? school.website : '')
                      .signupFormRow
                        label Email:
                        input(type="text", name="id_email", id="id_email", value= school.email ? school.email : '')
                      .signupFormRow
                        label Phone:
                        input(type="text", name="phone", id="phone", value= school.phone ? school.phone : '')
                      .signupFormRow
                        label Address:
                        textarea(name="address1", id="address1", rows="4", cols="25") #{school.address}
                      .signupFormRow
                        label Facebook:
                        input(type="text", name="facebook", id="facebook", value= school.facebook ? school.facebook : '')
                      .signupFormRow
                        label Twitter:
                        input(type="text", name="twitter", id="twitter", value= school.twitter ? school.twitter : '')
                      .signupFormRow
                        label Tumblr:
                        input(type="text", name="tumblr", id="tumblr", value= school.tumblr ? school.tumblr : '')
                      .signupFormRow
                        label Youtube:
                        input(type="text", name="youtube", id="youtube", value= school.youtube ? school.youtube : '')
                      .signupFormRow
                        label Category:
                        select(name='category', id='category', onchange='changeCourse(this.value);')
                      .signupFormRow
                        label Courses:
                        #courses
                      .signupFormRow
                        label Notes:
                        textarea(name="notes", id="notes", rows="4", cols="25")
                        span
                          | Admin has all the rights to delete/cancel the information you are providing.
                        input(type='submit', value='Edit', name='')
                      .clr
            .clr
          .clr
    //
      / Container
    include ../elements/footer
    //
      / Footer
