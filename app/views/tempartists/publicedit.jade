extends ../layout

block content
    script(type='text/javascript', src='/javascripts/uiControllers/TempArtistView.js')
    script(type='text/javascript')
        $(function() {
                setupUI(#{artist.id});
        });
    include ../elements/header
    //
      / Header
    //
      Container
    .containerr
      .container
        .loginContent
          .contentIn
            .ourstoryHeader
              h2
                | Edit Listing
                span 
            .signupForm
              form#artistEditFrm( method='post', action='/tempartists/edit', name='artistEditFrm', enctype="multipart/form-data", onsubmit='return validateTempArtist();')
                
                      .signupFormRow
                        label This is me.
                        input(type="checkbox", name="mylisting", id="mylisting", value="1", checked="checked")
                      .signupFormRow
                        label Your Email:
                        input(type="text", name="your_email", id="your_email", value='')
                      .signupFormRow
                        label First Name:
                        input(type="text", name="first_name", id="first_name", value= artist.first_name ? artist.first_name : '')
                        input(type="hidden", name="artistId", id="artistId", value="#{artist.id}")
                        input(type="hidden", name="url", id="url", value="#{artist.url}")
                      .signupFormRow
                        label Last Name:
                        input(type="text", name="last_name", id="last_name", value= artist.last_name ? artist.last_name : '')
                      .signupFormRow
                        label Country:
                        select(name='country', id='country', onchange='changeState(this.value);')
                      .signupFormRow
                        label State:
                        #stateHolder
                          select(name='state', id='state', onchange='changeCity(this.value);')
                      .signupFormRow
                        label City:
                        #cityHolder
                          select(name='city', id='city')
                      .signupFormRow
                        label Picture Link:
                        input(type="text", name="artist_image", id="artist_image", value="#{pasteUrl}")
                        input(type="hidden", name="oldImage", id="oldImage", value="#{artist.artist_image}")
                      .signupFormRow
                        label OR
                        &nbsp;
                      .signupFormRow
                        label Upload Picture:
                        input(type="file", name="picture", id="picture")
                      .signupFormRow
                        label Your Story:
                        textarea(name="description", id="description", rows="4", cols="25") #{artist.description}
                      .signupFormRow
                        label Website:
                        input(type="text", name="website", id="website", value= artist.website ? artist.website : '')
                      .signupFormRow
                        label Email:
                        input(type="text", name="id_email", id="id_email", value= artist.email ? artist.email : '')
                      .signupFormRow
                        label Phone:
                        input(type="text", name="phone", id="phone", value= artist.phone ? artist.phone : '')
                      .signupFormRow
                        label Address:
                        textarea(name="address1", id="address1", rows="4", cols="25") #{artist.address1}
                      .signupFormRow
                        label Facebook:
                        input(type="text", name="facebook", id="facebook", value= artist.facebook ? artist.facebook : '')
                      .signupFormRow
                        label Twitter:
                        input(type="text", name="twitter", id="twitter", value= artist.twitter ? artist.twitter : '')
                      .signupFormRow
                        label Tumblr:
                        input(type="text", name="tumblr", id="tumblr", value= artist.tumblr ? artist.tumblr : '')
                      .signupFormRow
                        label Youtube:
                        input(type="text", name="youtube", id="youtube", value= artist.youtube ? artist.youtube : '')
                      .signupFormRow
                        label Category:
                        select(name='category', id='category', onchange='changeCourse(this.value);')
                      .signupFormRow
                        label Courses:
                        #courses
                      .signupFormRow
                        label Notes:
                        textarea(name="notes", id="notes", rows="4", cols="25")
                        span
                          | Admin has all the rights to delete/cancel the information you are providing.
                        input(type='submit', value='Edit', name='')
                      .clr
            .clr
          .clr
    //
      / Container
    include ../elements/footer
    //
      / Footer
